{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@ampel-ui/*": ["src/*"]
    },
    "outDir": "./dist/",
    "module": "es2015",
    "declaration": true,
    "declarationDir": "./dist/",
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "pretty": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ]
}
